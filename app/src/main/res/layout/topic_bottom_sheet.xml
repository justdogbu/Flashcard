<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/secondary_color"
    android:layout_height="match_parent"
    tools:context=".TopicDetailBottom">

    <com.google.android.material.button.MaterialButton
        app:backgroundTint="@null"
        android:background="@android:color/transparent"
        app:icon="@drawable/ic_baseline_folder_open_24"
        android:textColor="@color/white"
        android:text="ADD TOPIC TO FOLDER"
        android:id="@+id/addTopicToFolderBtn"
        app:iconPadding="20dp"
        app:iconTint="@color/white"
        android:textAlignment="viewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        app:backgroundTint="@null"
        android:background="@android:color/transparent"
        app:icon="@drawable/ic_baseline_book_open_24"
        android:textColor="@color/white"
        android:text="SAVE AND EDIT TOPIC"
        android:id="@+id/saveAndEditTopicBtn"
        app:iconPadding="20dp"
        app:iconTint="@color/white"
        android:textAlignment="viewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        app:backgroundTint="@null"
        android:background="@android:color/transparent"
        app:icon="@drawable/baseline_edit_note_24"
        android:textColor="@color/white"
        android:text="EDIT"
        android:id="@+id/editTopicBtn"
        app:iconPadding="20dp"
        app:iconTint="@color/white"
        android:textAlignment="viewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        app:backgroundTint="@null"
        android:background="@android:color/transparent"
        app:icon="@drawable/baseline_delete_24"
        android:textColor="@color/white"
        android:text="DELETE"
        android:id="@+id/deleteTopicBtn"
        app:iconPadding="20dp"
        app:iconTint="@color/white"
        android:textAlignment="viewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>